worker_processes auto;

events {
    worker_connections 1024;
}

http {
    sendfile on;

    # DNS resolver для docker
    resolver 127.0.0.11 valid=300s;
    resolver_timeout 5s;

    # Логирование
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    # Защита от больших запросов
    client_max_body_size 10M;
    client_body_buffer_size 128k;

    # Таймауты
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;

    # SSL параметры
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # HTTP to HTTPS redirect
    server {
        listen 80;
        server_name e.gamio.ru;

        # ACME challenge для Certbot
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        # Редирект всего остального на HTTPS
        location / {
            return 301 https://$server_name$request_uri;
        }
    }

    # HTTPS server
    server {
        listen 443 ssl http2;
        server_name e.gamio.ru;

        # SSL сертификаты
        ssl_certificate /etc/letsencrypt/live/e.gamio.ru/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/e.gamio.ru/privkey.pem;
        ssl_trusted_certificate /etc/letsencrypt/live/e.gamio.ru/chain.pem;

        # Дополнительные SSL настройки
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

        # PostHog proxy - /p/*
        location /p/static/ {
            proxy_pass https://${POSTHOG_REGION}-assets.i.posthog.com/static/;
            proxy_set_header Host "${POSTHOG_REGION}-assets.i.posthog.com";
            proxy_ssl_server_name on;
            proxy_ssl_name "${POSTHOG_REGION}-assets.i.posthog.com";

            # CORS headers
            proxy_hide_header 'Access-Control-Allow-Origin';
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range' always;

            # Кеширование статики
            proxy_cache_valid 200 1d;
            proxy_cache_bypass $http_pragma $http_authorization;
            add_header X-Cache-Status $upstream_cache_status;
        }

        location /p/ {
            proxy_pass https://${POSTHOG_REGION}.i.posthog.com/;
            proxy_set_header Host "${POSTHOG_REGION}.i.posthog.com";
            proxy_ssl_server_name on;
            proxy_ssl_name "${POSTHOG_REGION}.i.posthog.com";

            # Проксирование заголовков клиента
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # CORS headers
            proxy_hide_header 'Access-Control-Allow-Origin';
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization' always;

            # Обработка OPTIONS для CORS preflight
            if ($request_method = 'OPTIONS') {
                add_header 'Access-Control-Allow-Origin' '*' always;
                add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
                add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization' always;
                add_header 'Access-Control-Max-Age' 1728000;
                add_header 'Content-Type' 'text/plain; charset=utf-8';
                add_header 'Content-Length' 0;
                return 204;
            }
        }

        # OpenRouter API proxy - /o/*
        location /o/ {
            proxy_pass https://openrouter.ai/api/;
            proxy_set_header Host "openrouter.ai";
            proxy_ssl_server_name on;
            proxy_ssl_name "openrouter.ai";

            # Проксирование заголовков клиента
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # Важно: проксируем Authorization header для OpenRouter API
            proxy_pass_request_headers on;

            # CORS headers
            proxy_hide_header 'Access-Control-Allow-Origin';
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE' always;
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization,X-Title,HTTP-Referer' always;

            # Обработка OPTIONS для CORS preflight
            if ($request_method = 'OPTIONS') {
                add_header 'Access-Control-Allow-Origin' '*' always;
                add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE' always;
                add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization,X-Title,HTTP-Referer' always;
                add_header 'Access-Control-Max-Age' 1728000;
                add_header 'Content-Type' 'text/plain; charset=utf-8';
                add_header 'Content-Length' 0;
                return 204;
            }
        }

        # Health check endpoint
        location /health {
            access_log off;
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }
    }
}
